<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#5BFF9800"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="猜猜鸡蛋在哪个鞋里"
        android:textSize="45sp"
        android:textColor="#00BCD4"/>
    <ImageView
        android:id="@+id/shoe_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:src="@mipmap/shoeresource"
        android:onClick="chose"/>
    <ImageView
        android:id="@+id/shoe_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/shoeresource"
        android:onClick="chose"/>
    <ImageView
        android:id="@+id/shoe_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:src="@mipmap/shoeresource"
        android:onClick="chose"/>
    <Button
        android:id="@+id/over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/shoe_one"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:text="点击此处结束游戏"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:visibility="gone"
        android:onClick="over"/>

</RelativeLayout>
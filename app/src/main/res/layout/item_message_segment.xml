<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/mes_card_01"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/message_friendhead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/qqimg"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/message_friendname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/mes_card_01"
        android:layout_alignTop="@+id/mes_card_01"
        android:text="这里是好友昵称或群名111111111"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:maxLength="20"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/message_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/mes_card_01"
        android:layout_below="@+id/message_friendname"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="这里是消息的预览内容"
        android:textSize="15sp"
        android:maxLength="20"
        android:maxLines="1"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/mes_card_01"
        android:layout_margin="8dp"
        android:text="15:11"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/mes_card_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_time"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/message_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 99+ "
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="#6D000000"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
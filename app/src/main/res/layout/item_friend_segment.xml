<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/user_magin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardElevation="0dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="20dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/friend_friendhead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/qqimg"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/friend_friendname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/user_magin"
        android:layout_alignTop="@+id/user_magin"
        android:textColor="#F44336"
        android:textSize="17sp"
        android:text="这里是用户昵称"
        android:layout_marginLeft="10dp"
        android:lines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/friend_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/user_magin"
        android:layout_alignBottom="@+id/user_magin"
        android:text="[5G在线]"
        android:textSize="12sp"
        android:textColor="#B4000000"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/friend_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/friend_online"
        android:layout_alignBottom="@+id/user_magin"
        android:text="这里是签名"
        android:textSize="15sp"
        android:textColor="#FF9800"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>
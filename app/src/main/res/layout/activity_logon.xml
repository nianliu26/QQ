<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/logon_view_null_1"
        android:layout_width="1dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"/>
    <View
        android:id="@+id/logon_view_null_2"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_below="@+id/logon_view_null_1"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/logon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logon_view_null_2"
        android:layout_centerHorizontal="true"
        android:text="注册账号"
        android:textSize="50sp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:id="@+id/logon_line_phonenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logon_title"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="电 话 号 码:"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>
        <EditText
            android:id="@+id/logon_input_phonenum"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@null"
            android:hint="请输入您的手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:lines="1"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/logon_phonenum_clear"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@mipmap/cancel"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/logon_line_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/logon_line_phonenum">
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="设 置 昵 称:"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>
        <EditText
            android:id="@+id/logon_input_nickname"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@null"
            android:hint="设置你的昵称"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:lines="1"
            android:maxLength="15"
            android:inputType="text"/>
        <ImageView
            android:id="@+id/logon_nickname_clear"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@mipmap/cancel"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/logon_line_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/logon_line_nickname">
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="请 输 入 密 码:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>
        <EditText
            android:id="@+id/logon_input_pwd"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@null"
            android:hint="请输入8-16位的密码"
            android:maxLength="16"
            android:singleLine="true"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:ellipsize="start"/>
        <ImageView
            android:id="@+id/logon_password_clear"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@mipmap/cancel"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/logon_line_ensurePWD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/logon_line_password">
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="再次输入密码:"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>
        <EditText
            android:id="@+id/logon_input_pwd_again"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@null"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:lines="1"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/logon_ensure_password_clear"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@mipmap/cancel"/>
    </LinearLayout>
    <TextView
        android:id="@+id/logon_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/logon_line_ensurePWD"
        android:background="@drawable/selector_text_to_button_alter_theme"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="注册"
        android:gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:onClick="login"/>
    <TextView
        android:id="@+id/logon_cancel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/logon_line_ensurePWD"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="取消"
        android:gravity="center"
        android:background="@drawable/shape_button_unusable"
        android:onClick="cancel"/>

</RelativeLayout>